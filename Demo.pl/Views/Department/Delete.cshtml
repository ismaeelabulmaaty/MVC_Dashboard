@model Department
@{
    ViewData["Title"] = "Delete";
}

<center class="m-4">
    <h1> Are You Sure To Delete This Department</h1>
</center>


<div class="w-75 m-auto rounded shadow bg-light mb-5">

    <form asp-action="Delete" asp-route-id="@Model.Id" class="p-5 mb-3">

        <div class="form-group">

            <label class="col-form-label" asp-for="Code"></label>
            <input type="text" asp-for="Code" class="form-control" readonly />

        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="DateOfCreation"></label>
            <input asp-for="DateOfCreation" class="form-control" readonly />
        </div>

        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary text-dark">Cancel</a>

    </form>
</div>

