
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<center class="mb-5">
    <h1 class="mt-5 pt-3">All Departments</h1>
    <br />
    <br />
    <a asp-controller="Department" asp-action="Creat" class="btn btn-outline-primary">Creat New Department</a>
</center>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover border rounded-lg shadow">

        <thead>
            <tr>
                <td class="font-weight-bold">@Html.DisplayNameFor(D=>D.Code)</td>
                <td class="font-weight-bold">@Html.DisplayNameFor(D => D.Name)</td>
                <td class="font-weight-bold">@Html.DisplayNameFor(D => D.DateOfCreation)</td>
                <td class="font-weight-bold">Details</td>
                <td class="font-weight-bold">Update</td>
                <td class="font-weight-bold">Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>

                @*     <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                        <i class="fas fa-eye"></i></a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td> *@

                    <partial model="@department.Id.ToString()" name="_ButtonsPartail" />

                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="m-5 alert alert-warning">
        <h3>There is no Departments</h3>
    </div>
}